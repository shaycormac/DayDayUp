<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_spinner_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.studybehavior.testactivity.CustomSpinnerViewActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#888888"/>
    
    <com.example.studybehavior.widget.CustomSpinnerView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:scrollbars="none"
        android:id="@+id/customSpinnerView"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#888888"/>
    
    <com.example.studybehavior.widget.CustomRadionGroup
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:id="@+id/customRadioButton"/>

</LinearLayout>
