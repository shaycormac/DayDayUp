<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.somemyidea">

    <uses-permission android:name="android.permission.WRITE_APN_SETTINGS" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.ToastActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".service.MyIntentService"
            android:exported="false" />

        <activity
            android:name=".activity.TestIntentServiceActivity"
            android:label="@string/title_activity_test_intent_service"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LayoutTestActivity"
            android:label="@string/title_activity_layout_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ItemTouchHelperActivity"
            android:label="@string/title_activity_item_touch_helper"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SingleItemRecycleViewActivity"
            android:label="@string/title_activity_single_item_recycle_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".rxjava.RxjavaActivity"></activity>
    </application>

</manifest>